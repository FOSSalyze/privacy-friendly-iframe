{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
